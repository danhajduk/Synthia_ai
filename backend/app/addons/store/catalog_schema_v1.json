{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Synthia Addons Catalog v1",
  "type": "object",
  "required": ["schema", "addons"],
  "properties": {
    "schema": {
      "const": "synthia.addons.catalog.v1"
    },
    "generated_at": {
      "type": "string",
      "description": "ISO-8601 timestamp (recommended)."
    },
    "catalog_name": {
      "type": "string",
      "description": "Human-friendly name for this catalog (optional)."
    },
    "catalog_id": {
      "type": "string",
      "description": "Stable identifier for this catalog (optional)."
    },
    "signature": {
      "type": "object",
      "description": "Reserved for future signed catalogs (e.g. detached signature metadata).",
      "additionalProperties": true
    },
    "addons": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "repo", "types", "min_core_version"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]{1,63}$",
            "description": "Unique addon id (lowercase)."
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "repo": {
            "type": "string",
            "format": "uri",
            "minLength": 1,
            "description": "Git repository URL (https recommended)."
          },
          "ref": {
            "type": "string",
            "minLength": 1,
            "description": "Git ref (branch/tag/commit). Defaults to 'main' if omitted."
          },
          "path": {
            "type": "string",
            "minLength": 1,
            "description": "Path inside repo where the addon root lives. Defaults to '.' if omitted."
          },
          "types": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Capability tags (e.g. ui.main, ui.sidebar, ui.header, backend)."
          },
          "min_core_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$",
            "description": "Minimum supported Synthia core version."
          },
          "max_core_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$",
            "description": "Maximum supported Synthia core version (optional)."
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
